# Environment Variables for Local Development

# LLM Provider Configuration
# Options: google, openai, azure_openai
LLM_PROVIDER=google

# Google AI (Gemini) - Default (Free)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI (Uncomment to use)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4

# Azure OpenAI (Uncomment to use)
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Vector Store Configuration
# Options: faiss, pinecone, azure_search
VECTOR_STORE=faiss

# FAISS (Local) - Default (Free)
FAISS_INDEX_PATH=./vector_store/faiss_index

# Pinecone (Uncomment to use)
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX_NAME=rag-documents

# Azure AI Search (Uncomment to use)
# AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
# AZURE_SEARCH_API_KEY=your_azure_search_key_here
# AZURE_SEARCH_INDEX_NAME=rag-documents

# Application Settings
APP_NAME=RAG AI Agent
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_TO_RETRIEVE=5

# Session Configuration
SESSION_TIMEOUT=3600
MAX_CONVERSATION_HISTORY=10

# CORS Settings (for frontend)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
